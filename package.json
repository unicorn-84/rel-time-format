{
  "name": "rel-time-format",
  "version": "0.0.0-development",
  "description": "A simple wrapper for Intl.RelativeTimeFormat",
  "type": "module",
  "exports": "./lib/index.js",
  "typings": "./lib/index.d.js",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "intl",
    "time",
    "date"
  ],
  "repository": "git@github.com:unicorn-84/rel-time-format.git",
  "author": "unicorn-84 <unicorn-84@ya.ru> (https://github.com/unicorn-84)",
  "bugs": {
    "url": "https://github.com/unicorn-84/rel-time-format/issues"
  },
  "homepage": "https://github.com/unicorn-84/rel-time-format#readme",
  "license": "MIT",
  "scripts": {
    "semantic-release": "semantic-release",
    "cm": "cz",
    "format": "prettier -c .",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --coverage --ci --passWithNoTests"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.15",
    "cz-conventional-changelog": "3.3.0",
    "jest": "27.5.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
