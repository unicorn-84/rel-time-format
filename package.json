{
  "name": "rel-time-format",
  "version": "0.0.0-development",
  "description": "A simple wrapper for Intl.RelativeTimeFormat",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "intl",
    "time",
    "date"
  ],
  "repository": "git@github.com:unicorn-84/rel-time-format.git",
  "author": "unicorn-84 <unicorn-84@ya.ru> (https://github.com/unicorn-84)",
  "bugs": {
    "url": "https://github.com/unicorn-84/rel-time-format/issues"
  },
  "homepage": "https://unicorn-84.github.io/rel-time-format",
  "license": "MIT",
  "scripts": {
    "semantic-release": "semantic-release",
    "cm": "cz",
    "format": "prettier -c -w .",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "lint": "eslint ./src --ext .ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.15",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "cz-conventional-changelog": "3.3.0",
    "date-fns": "2.28.0",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "jest": "27.5.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
